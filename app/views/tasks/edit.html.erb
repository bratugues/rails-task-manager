<h1>Edit task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed, "Mark as completed" %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Back", task_path(@task), class: "btn btn-primary" %></p>
