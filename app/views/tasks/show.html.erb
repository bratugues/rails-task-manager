<h1><%=@task.title%></h1>

<p><%=@task.details%></p>

<%if @task.completed%>
  <p>
    <i class="fa-regular fa-square-check"></i>
    This task is completed
  </p>
<%else%>
  <p>
    <i class="fa-regular fa-square"></i>
    This task is not completed yet
  </p>
<%end%>

<p><%=link_to "Edit task", edit_restaurant_path, class: "btn btn-primary"%></p>
<p><%=link_to "Delete task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary"%></p>
<p><%= link_to "Back", tasks_path, class: "btn btn-primary" %></p>
